<h1> Edit your profile </h1>
<%= form_for @teacher do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :postcode %>
  <%= f.text_field :postcode %>
  <%= f.file_field :image %>
  <%= f.select :category_id, Category.all.map{ |f| [f.name, f.id] } %>
  <%= f.submit %>

  <% end %>
