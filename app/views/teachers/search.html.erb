<div class="title-container">

  <h1>Search Results</h1>
  <h2>Here are you search results</h2>
  <% if @teachers.blank? %>
  <h1>Couldn't find a teacher with your search criteria</h1>
  <% else %>

  <div class="teachers">
    <% @teachers.each do |teacher| %>
    <div class="teacher">
      <div class="thumbnail">
        <div class="caption">
          <h3>Name:<%= link_to teacher.name, teacher %></h3>
          <p>Instrument:<%= link_to teacher.description, teacher %></p>
          <p>Location:<%= link_to teacher.city, teacher %></p>
          <p>Price per lesson:<%= link_to teacher.city, teacher %></p>
          <p>Bio: A terrible teacher with no  passion at all. Awful. Wouldn't learn again</p>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
